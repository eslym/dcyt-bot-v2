generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Guild {
  id       String  @id
  language String?

  publishText    String?
  scheduleText   String?
  rescheduleText String?
  upcomingText   String?
  liveText       String?

  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt

  Channels GuildChannel[]
}

model GuildChannel {
  id      String @id
  guildId String

  publishText    String?
  scheduleText   String?
  rescheduleText String?
  upcomingText   String?
  liveText       String?

  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt

  Guild         Guild                 @relation(fields: [guildId], references: [id], onDelete: Cascade)
  Subscriptions YoutubeSubscription[]
}

model YoutubeChannel {
  id               String    @id
  webhookId        String    @unique @default(cuid())
  webhookSecret    String?
  webhookExpiresAt DateTime?

  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt

  YoutubeVideos YoutubeVideo[]
  Subscriptions YoutubeSubscription[]
}

model YoutubeVideo {
  id        String @id
  channelId String
  type      String
  title     String

  scheduledAt DateTime?
  livedAt     DateTime?
  deletedAt   DateTime?

  publishNotifiedAt    DateTime?
  scheduleNotifiedAt   DateTime?
  rescheduleNotifiedAt DateTime?
  upcomingNotifiedAt   DateTime?
  liveNotifiedAt       DateTime?

  createdAt DateTime?      @default(now())
  updatedAt DateTime?      @updatedAt
  Channel   YoutubeChannel @relation(fields: [channelId], references: [id], onDelete: Cascade)
}

model YoutubeSubscription {
  youtubeChannelId String
  guildChannelId   String

  notifyPublish    Boolean @default(true)
  notifySchedule   Boolean @default(true)
  notifyReschedule Boolean @default(true)
  notifyUpcoming   Boolean @default(true)
  notifyLive       Boolean @default(true)

  publishText    String?
  scheduleText   String?
  rescheduleText String?
  upcomingText   String?
  liveText       String?

  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt

  YoutubeChannel YoutubeChannel @relation(fields: [youtubeChannelId], references: [id], onDelete: Cascade)
  GuildChannel   GuildChannel   @relation(fields: [guildChannelId], references: [id], onDelete: Cascade)

  @@id(name: "id", [youtubeChannelId, guildChannelId])
}
